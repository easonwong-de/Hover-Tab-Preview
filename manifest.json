{
	"manifest_version": 2,
	"name": "Hover Tab Preview",
	"version": "0.0.1",
	"description": "Adds tab preview to Firefox with the help of userChrome.css",
	"author": "Eason Wong",
	"browser_specific_settings": {
		"gecko": {
			"id": "HTP@EasonWong"
		}
	},
	"permissions": ["activeTab", "tabs", "theme", "<all_urls>"],
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	}
}
